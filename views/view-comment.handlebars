{{#each comments}}
<div class="card w-90 mb-3">
    <a href="/api/post"></a>
    <input type="hidden" name="post-id" value="{{id}}">
    <input type="hidden" name="comments-id" value="{{id}}">
    <h3 class="card-header">Comments</h3>
    <div class="card-body">
        <p class="post-content">{{content}}</p>
    </div>
        <div class="card-footer text-muted d-flex justify-content-between">
        <h6 class="footer-content">Commented by: {{user.username}} on {{format_date createdAt}}</h6>
    </div>
</div>
{{/each}}