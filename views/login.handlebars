{{!-- LOGIN PAGE LAYOUT --}}
<div class="row card">
  <div class="text-center card-header">
    <h2>Login</h2>
  </div>
  <form id="login-form" class="card-body justify-content-center">
    <div class="text-center">
      <label for="username-input-login">Username</label>
      <input type="text" id="username-input-login" />
    </div>
    <div class="text-center my-2">
      <label for="password-input-login" class="form-label">Password</label>
      <input type="password" id="password-input-login" />
    </div>
    <div class="row d-flex justify-content-center mt-2">
      <button type="submit" id="login-btn" class="btn-dark btn-sm border-primary ml-4">Login!</button>
      <button class="btn-dark btn-sm border-primary ml-4"><a href="/signup">Sign up instead</a></button>
    </div>
  </form>
</div>
<div id="notify" class="hidden alert alert-warning mt-2 text-center" role="alert">
   The username or password you entered is wrong. Please try again!
</div>

<script src="/js/login.js"></script>